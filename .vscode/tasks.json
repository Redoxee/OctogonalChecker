{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"args": ["--features", "debug"],
			"label": "rust: run debug",
			
      		// Mark as the default build task so cmd/ctrl+shift+b will create them
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}